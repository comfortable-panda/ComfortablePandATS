{
  "name": "comfortable-panda",
  "version": "4.1.0",
  "description": "Comfortable PandA is a browser extension for managing assignments and quizzes on PandA.",
  "main": "index.ts",
  "scripts": {
    "test": "jest",
    "build:chrome": "webpack --config tasks/webpack.config.chrome.js && node tasks/release chrome",
    "build:firefox": "webpack --config tasks/webpack.config.firefox.js && node tasks/release firefox",
    "build:all": "npm run build:chrome && npm run build:firefox"
  },
  "author": "das08, tinaxd, tetete, arakistic",
  "license": "Apache-2.0",
  "dependencies": {
    "@types/chrome": "^0.0.178",
    "archiver": "^5.3.0",
    "copy-webpack-plugin": "^10.2.4",
    "lodash": "^4.17.21",
    "mustache": "^4.2.0",
    "ts-loader": "^9.2.6",
    "webpack": "^5.70.0"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/lodash": "^4.14.178",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "clean-webpack-plugin": "^4.0.0",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.5.1",
    "jest-fetch-mock": "^3.0.3",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.3",
    "webpack-cli": "^4.9.1"
  },
  "jest": {
    "automock": false,
    "setupFiles": [
      "./src/tests/setupJest.js"
    ],
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "preset": "ts-jest"
  }
}
